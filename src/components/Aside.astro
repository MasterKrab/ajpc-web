---
import InstagramWidget from '@components/InstagramWidget.svelte'
import Messages from '@components/messages/Messages.astro'
---

<aside class="aside">
  <InstagramWidget client:load id="DMRc0rexFrj" />
  <Messages />
</aside>

<style>
  .aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--foreground-color);
    padding: 0.5rem;
    transition: var(--transition-theme);
    height: fit-content;
  }

  @media screen and (min-width: 600px) {
    .aside {
      padding: 1.5rem;
      border-radius: 1rem;
    }
  }
</style>
