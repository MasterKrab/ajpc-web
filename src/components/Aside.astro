---
import InstagramWidget from '@components/InstagramWidget/index.astro'
import Messages from '@components/messages/Messages.astro'
import Cache from '@components/Cache.astro'
---

<aside class="aside">
  <Cache key="instagram-widget-ajprogcomp">
    <InstagramWidget username="ajprogcomp" />
  </Cache>
  <Messages />
</aside>

<style>
  .aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.5rem;
    transition: var(--transition-theme);
    height: fit-content;
  }

  @media screen and (min-width: 600px) {
    .aside {
      padding: 1.5rem;
    }
  }
</style>
