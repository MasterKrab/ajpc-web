---
import '@q42/floating-focus-a11y/dist/unstyled/index.css'
---

<script>
  const init = async () => {
    const { default: FloatingFocus } = await import(
      // @ts-ignore
      '@q42/floating-focus-a11y/dist/unstyled'
    )
    new FloatingFocus()
  }

  document.addEventListener('astro:page-load', init)
</script>

<style is:global>
  *:focus {
    outline: none;
  }

  .floating-focus-enabled :focus,
  .floating-focus-enabled .focus {
    outline: #1e90ff solid 2px;
    outline-offset: 8px;
  }

  .floating-focus-enabled [type='button']:focus {
    outline-color: #008000;
    outline-offset: 4px;
  }
</style>
