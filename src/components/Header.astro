---
import logoSVG from '@assets/logo.svg?raw'

import Svg from '@cxa/astro-inline-svg'

import ToggleTheme from '@components/theme/ToggleTheme.astro'

const { pathname } = Astro.url

const MENU_ITEMS = [
  { href: '/', label: 'Inicio' },
  { href: '/acerca', label: 'Acerca' },
]
---

<script>
  const navigation = document.getElementById('navigation')!
  const navigationBackground = document.getElementById('navigation-background')!
  const openMenu = document.getElementById('open-menu')!

  openMenu.addEventListener('click', () => {
    const isActive = openMenu.classList.toggle('open-menu--active')
    navigation.classList.toggle('navigation--active', isActive)
    openMenu.setAttribute('aria-checked', String(isActive))
    document.body.classList.toggle('body-menu-active', isActive)
    navigationBackground.classList.toggle(
      'navigation-background--active',
      isActive,
    )
  })
</script>

<header class="header">
  <div class="header__content">
    <a class="logo" href="/">
      <Svg
        class="logo__image"
        raw={logoSVG}
        aria-label="Academía Juvenil de Programación"
        width={100}
        height={50}
      />
    </a>

    <div class="navigation-background" id="navigation-background"></div>

    <nav class="navigation" id="navigation">
      <ul class="menu">
        {
          MENU_ITEMS.map((item) => (
            <li class="menu__item">
              <a
                class:list={[
                  'menu__link',
                  {
                    'menu__link--active': `/${pathname}`.startsWith(item.href),
                  },
                ]}
                href={item.href}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <ToggleTheme />

    <button
      class="open-menu"
      id="open-menu"
      role="switch"
      aria-checked="false"
      aria-label="Menú de navegación"
    >
    </button>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    padding: 0.5rem 1rem;
    width: 100%;
    color: var(--text-color);
    box-shadow: 0.5rem 0.5rem 1rem rgba(0, 0, 0, 0.1);
    background-color: var(--foreground-color);
  }

  @media screen and (min-width: 768px) {
    .header {
      grid-column: span 2;
    }
  }

  .header__content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    max-width: var(--page-max-width);
    margin-left: auto;
    margin-right: auto;
  }

  @media screen and (min-width: 768px) {
    .header__content {
      display: grid;
      grid-template-columns: 100px auto 100px;
      gap: 0;
    }
  }

  .logo {
    position: relative;
    z-index: 1000;
    align-self: end;
  }

  .open-menu {
    box-sizing: content-box;
    position: relative;
    z-index: 10000;
    display: none;
    justify-self: end;
    width: 2rem;
    height: 1.5rem;
    border-top: 0.2rem solid var(--text-color-primary);
    order: 3;
    transition: border-top-color 0.2s ease-in-out;
  }

  .open-menu::before,
  .open-menu::after {
    content: '';
    display: block;
    width: 2rem;
    height: 0.2rem;
    background-color: var(--text-color-primary);
    transition: transform 0.3s ease-in-out;
  }

  .open-menu::before {
    position: absolute;
    top: 0.5rem;
  }

  .open-menu::after {
    position: absolute;
    bottom: 0;
  }

  .open-menu--active {
    border-top-color: transparent;
  }

  .open-menu--active::before {
    transform: rotate(45deg);
  }

  .open-menu--active::after {
    transform: translateY(-0.75rem) rotate(-45deg);
  }

  .navigation-background {
    display: none;
    background-color: rgba(0, 0, 0, 0.75);
  }

  @media screen and (max-width: 768px) {
    .navigation-background {
      display: block;
    }

    .navigation-background,
    .navigation {
      position: absolute;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      transform: translateX(-200%);
    }

    .navigation {
      width: 70vw;
      background-color: var(--foreground-color);
    }

    .navigation--active,
    .navigation-background--active {
      transform: translateX(0);
    }

    .open-menu {
      display: inline-block;
    }
  }

  .menu {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    height: 100%;
    font-weight: bold;
    list-style: none;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 0;
  }

  @media screen and (max-width: 768px) {
    .menu {
      flex-direction: column;
      gap: 2.5rem;
      font-size: 2rem;
    }
  }

  .menu__item:hover {
    color: var(--menu-item-color, var(--text-color));
  }

  .menu__item:first-child {
    --menu-item-color: var(--brand-primary);
  }

  .menu__item:nth-child(2) {
    --menu-item-color: var(--brand-secondary);
  }

  .menu__item:nth-child(3) {
    --menu-item-color: var(--brand-tertiary);
  }

  .menu__link,
  .menu__link::before,
  .menu__link::after {
    transition: color 0.3s ease-in-out;
    color: var(--menu-item-color, var(--text-color));
  }

  .menu__link::before,
  .menu__link::after {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .menu__link::before {
    content: '{';
  }

  .menu__link::after {
    content: '}';
  }

  .menu__link--active::before,
  .menu__link--active::after {
    opacity: 1;
  }

  .menu__link:active::before,
  .menu__link:hover::before,
  .menu__link:active::after,
  .menu__link:hover::after {
    opacity: 1;
  }
</style>
